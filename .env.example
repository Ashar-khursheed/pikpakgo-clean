APP_NAME=PikPakGo
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=pikpakgo
DB_USERNAME=root
DB_PASSWORD=

BROADCAST_DRIVER=log
CACHE_DRIVER=redis
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=43200

# Redis Configuration
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@pikpakgo.com"
MAIL_FROM_NAME="${APP_NAME}"

# AWS (if using S3 for images)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# JWT Configuration
JWT_SECRET=
JWT_TTL=60
JWT_REFRESH_TTL=20160

# Hotelbeds API Configuration
HOTELBEDS_API_KEY=your_hotelbeds_api_key
HOTELBEDS_SECRET=your_hotelbeds_secret
HOTELBEDS_BASE_URL=https://api.test.hotelbeds.com
# For production use: https://api.hotelbeds.com

# OwnerRez API Configuration
OWNERREZ_API_KEY=your_ownerrez_api_key
OWNERREZ_BASE_URL=https://api.ownerrez.com/v2

# Authorize.Net Payment Gateway
AUTHORIZENET_LOGIN_ID=your_authorize_net_login_id
AUTHORIZENET_TRANSACTION_KEY=your_authorize_net_transaction_key
AUTHORIZENET_ENVIRONMENT=sandbox
# For production use: production

# Guest Session Configuration
GUEST_SESSION_LIFETIME=43200  # 30 days in minutes
GUEST_SESSION_EXTENSION_DAYS=30

# Search Configuration
SEARCH_CACHE_DURATION=300  # 5 minutes in seconds
PROPERTY_SYNC_INTERVAL=12  # hours
POPULAR_DESTINATIONS_COUNT=20

# Pricing Configuration
DEFAULT_MARKUP_PERCENTAGE=15
MARKUP_CACHE_DURATION=1800  # 30 minutes

# Booking Configuration
BOOKING_REFERENCE_PREFIX=PKG
TRANSACTION_ID_PREFIX=TXN
FREE_CANCELLATION_HOURS=24  # Hours before check-in
CANCELLATION_FEE_PERCENTAGE_7_DAYS=0
CANCELLATION_FEE_PERCENTAGE_3_DAYS=25
CANCELLATION_FEE_PERCENTAGE_1_DAY=50

# Admin Configuration
ADMIN_EMAIL=admin@pikpakgo.com
ADMIN_PANEL_URL=/admin

# API Rate Limiting
API_RATE_LIMIT_PUBLIC=60  # requests per minute for public endpoints
API_RATE_LIMIT_AUTH=100   # requests per minute for authenticated users
API_RATE_LIMIT_ADMIN=200  # requests per minute for admin

# Pagination
DEFAULT_PAGINATION_LIMIT=20
MAX_PAGINATION_LIMIT=100

# Image Configuration
MAX_IMAGE_UPLOAD_SIZE=5120  # KB (5MB)
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif,webp

# Logging
LOG_SEARCH_QUERIES=true
LOG_BOOKING_EVENTS=true
LOG_PAYMENT_TRANSACTIONS=true

# Third-Party Integrations
GOOGLE_MAPS_API_KEY=
GOOGLE_ANALYTICS_ID=

# Feature Flags
FEATURE_GUEST_CHECKOUT=true
FEATURE_SAVE_PAYMENT_METHODS=false
FEATURE_LOYALTY_PROGRAM=false
FEATURE_REVIEWS=true
FEATURE_WISHLIST=true

# Notification Configuration
NOTIFICATION_BOOKING_CONFIRMATION=true
NOTIFICATION_PAYMENT_SUCCESS=true
NOTIFICATION_CANCELLATION=true
NOTIFICATION_ADMIN_NEW_BOOKING=true
